<div class="max-w-xl mx-auto">
  <%= form_with(model: @account_settings, url: "/account/settings/#{@account_settings.id}", class: "") do |form| %>
    <%= render 'auth/messages' %>
    <%= render 'auth/errors' %>

    <h1 class="bold text-3xl mb-4">Settings</h1>

    <div class="mb-4">
      <%= label :account_settings, :display_name, class: "block mb-2" %>
      <%= form.text_field :display_name, class: "w-full rounded" %>
    </div>

    <div class="mb-4">
      <%= label :account_settings, :currency, class: "block mb-2" %>
      <%= select_tag 'account_settings[currency]', options_for_select(['EUR', 'USD', 'GBP'], @account_settings.currency), class: "w-full rounded py-2 px-3"%>
    </div>

    <div class="mb-4">
      <button class="button p-2" type="submit">Save</button>
    </div>

  <% end %>

  <div class="max-w-xl mx-auto">
    <%= link_to "Manage addresses", account_addresses_path, class: 'secondary-button' %>
  </div>
</div>
