<nav class="p-4 bg-sky-500">
  <div class="container">
    <ul class="inline-block">
      <li><%= link_to "Webstore", root_path, class: "p-2 rounded text-gray-700" %></li>
    </ul>

    <% if session[:user_id] && session[:is_admin] %>

    <div class="inline-block right-0">
      Welcome, <strong><%= session[:username] %></strong>
    </div>

    <ul class="inline-block right-0">
      <li class="inline-block"><%= link_to "Dashboard", admin_dashboard_path, class: "nav-link" %></li>
