<div>
  <h1 class="font-bold text-4xl"><%= @group.name %></h1>

  <% if @group.products.count == 0 %>
    <p class="mt-4">There are currently no products for this category.</p>
  <% end%>

  <div class="items-container">
    <% @group.products.each do |product| %>
      
      <div class="product-container relative">
        <button class="secondary-button bg-yellow-400 border-2 border-orange-500 hover:border-yellow-400 mx-auto mt-0 block absolute left-2 top-2">Add to cart</button>
        <a href="<%= product_path(product.id) %>">
          <div class="item-card">
            <%= image_tag(product.image_url) %> 
            <div class="justify-center flex-col m-1">
              <div><%= product.name %></div>
              <div><%= product.get_price('USD') %> USD</div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
